---
// Henter parametrene fra Astro.props og videresender øvrige attributter
const { variant = "primary", size = "medium", ...rest } = Astro.props;

//Definer den styling (Tailwind classes, der gør sig gældende for alle knapper)
const buttonStyling =
  "inline-flex items-center gap-2 px-5 py-2 border-2 md:px-7 md:py-3 font-regular font-semibold whitespace-nowrap";

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter
const variantClasses = {
  primary:
    "border-[var(--color-Orange)] hover:bg-[var(--color-Orange)] hover:cursor-pointer transition-all duration-300",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  medium: "text-[10px] md:text-[14px]",
};
---

<button
  type="button"
  {...rest}
  class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}
>
  <slot />
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="w-4 h-4 md:w-5 md:h-5 ml-2"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0M3.124 7.5A8.969 8.969 0 0 1 5.292 3m13.416 0a8.969 8.969 0 0 1 2.168 4.5"
    ></path>
  </svg>
</button>
